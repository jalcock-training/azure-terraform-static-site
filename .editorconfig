# Root EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown files (don't trim whitespace)
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Terraform files
[*.tf]
indent_size = 2

# YAML (GitHub Actions, configs)
[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# HTML, CSS, JS
[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.js]
indent_size = 2

